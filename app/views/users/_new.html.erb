<div class="row">
<div class="col col-sm-10 col-sm-offset-1 signup-form">
	<h1>Sign up</h3>
	<section id="sign">
	  <%= form_for user do |form| %>
	    <%= render partial: '/users/form', object: form %>
	    <input type="checkbox" value="age" id="age-i" />
	    <label for="age-i"><span></span>I confirm that I am over the age of 18.</label>
	    <div class="div-btn">
	    	<button class="signup btn-cta" type="submit">Sign Up</button>
	    </div>
	  <% end %>
	</section>
</div>
</div>