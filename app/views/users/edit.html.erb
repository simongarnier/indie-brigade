<%= render 'partials/menu' %>
<div class="container-fluid">
  <div class="edit-profile edit-account">
    <div class="col col-xs-12 edit-profile-container box-content">
      <div class="row">
        <div class="col col-sm-3 profile-settings">
          <ul>
            <%= link_to '/account/dev/edit' do %>
              <li>Edit Profile</li>
            <% end %>
            <li class="active">Account settings</li>
          </ul>
        </div>
        <div class="col col-sm-9 edit-profile-settings">
          <div class="edit-profile-content">
            <%= form_for @user, url: '/account/user', html: { multipart: true }, method: :put do |form|  %>
              <div class="iNd-input">
                <%= form.label :email%>
                <%= form.text_field :email %>
              </div>
              <div class="iNd-input">
                <%= form.label :password do %>New password<% end %>
                <%= form.password_field :password%>
              </div>
              <div class="iNd-input">
                <%= form.label :cpassword do %>Confirm new password<%end%>
                <%= form.password_field :cpassword %>
              </div>

              <a class="btn-cta btn-icon"><span><i class="fa fa-trash"></i></span>Delete Account</a>

              <div class="iNd-input">
                <%= form.label :old_password do %>Current password<%end%>
                <%= form.password_field :old_password %>
              </div>

              <a onclick="document.getElementById('edit_user_<%=@user.id%>').submit(); return false" class="btn-cta btn-icon" href="#">
                <span><i class="fa fa-floppy-o"></i></span> Submit
              </a>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
