<%= render 'partials/menu' %>
<div class="row edit-profile">
	<div class="col col-sm-10 col-sm-offset-1 edit-profile-container">
		<div class="row">
			<div class="col col-sm-3">
				<ul>
					<li class="active">Edit Profile</li>	
					<li>Edit Stuff</li>	
				</ul>
			</div>
			<div class="col col-sm-9 edit-profile-settings">
				<div class="edit-profile-content">
				<form>
					<div class="form-name">
						<input type="text" placeholder="First Name">
						<input type="text" placeholder="Last Name">
					</div>
					<%= form_for @dev, url: dev_path, html: { multipart: true }, method: :put do |form| %>
					  <%= form.file_field :avatar %>
					  <%= submit_tag("submit") %>
					<% end %>
					<label for="about">About</label>
					<textarea name="about" cols="40" rows="5"></textarea>
					<br>
					<label for="conditions">Conditions</label>
					<input type="checkbox" value="online" id="online-i" />
					<label for="online-i"><span></span>Check Box 1</label>
					<input type="checkbox" value="paid">Paid
					<input type="checkbox" value="person">In Person
					<input type="checkbox" value="unpaid">Unpaid
					<input type="checkbox" value="internship">Internship
					</form>
				</div>
			</div>
		</div>
	</div>
</div>