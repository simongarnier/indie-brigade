<p id="notice"><%= notice %></p>

<h1>Listing Opening Softwares</h1>

<table>
  <thead>
    <tr>
      <th>Opening</th>
      <th>Software</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @opening_softwares.each do |opening_software| %>
      <tr>
        <td><%= opening_software.opening %></td>
        <td><%= opening_software.software %></td>
        <td><%= link_to 'Show', opening_software %></td>
        <td><%= link_to 'Edit', edit_opening_software_path(opening_software) %></td>
        <td><%= link_to 'Destroy', opening_software, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

